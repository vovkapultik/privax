{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": ["tests/**/*", "utils/**/*"],
  "exclude": ["node_modules", "dist"]
} 